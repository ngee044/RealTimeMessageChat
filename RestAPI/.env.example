# RestAPI Environment Variables
# Copy this file to .env and fill in the values
# These environment variables override the values in api_server_config.json

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rtmc_db
DB_USER=postgres
DB_PASSWORD=your_secure_db_password_here

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Authentication
# IMPORTANT: Generate a strong random secret for production!
# Example: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Note: These variables take precedence over api_server_config.json
# For production, use a secrets management tool (AWS Secrets Manager, HashiCorp Vault, etc.)

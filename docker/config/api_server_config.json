{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "mode": "release",
    "read_timeout_seconds": 30,
    "write_timeout_seconds": 30,
    "max_header_bytes": 1048576,
    "shutdown_timeout_seconds": 15
  },
  "rabbitmq": {
    "host": "rabbitmq",
    "port": 5672,
    "username": "guest",
    "password": "guest",
    "vhost": "/",
    "queue_name": "message_queue",
    "durable": true,
    "auto_delete": false,
    "exclusive": false,
    "no_wait": false,
    "connection_retry": 5,
    "retry_delay_seconds": 5
  },
  "redis": {
    "host": "redis",
    "port": 6379,
    "password": "",
    "db": 0,
    "dial_timeout_seconds": 5,
    "read_timeout_seconds": 3,
    "write_timeout_seconds": 3,
    "pool_size": 10,
    "min_idle_conns": 5,
    "enabled": true
  },
  "database": {
    "host": "postgres",
    "port": 5432,
    "user": "rtmc_user",
    "password": "rtmc_password",
    "dbname": "rtmc",
    "sslmode": "disable",
    "max_open_conns": 25,
    "max_idle_conns": 10,
    "conn_max_lifetime_minutes": 30,
    "enabled": true
  },
  "auth": {
    "jwt_secret": "your-secret-key-change-in-production",
    "jwt_expiration_hours": 24,
    "refresh_expiration_hours": 720,
    "enabled": false
  },
  "metrics": {
    "enabled": true,
    "path": "/metrics"
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output_path": "/app/logs/api_server.log"
  }
}
